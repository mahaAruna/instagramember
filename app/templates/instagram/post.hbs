{{page-title "Post"}}
<div class='postContainer'>
    {{#if this.show}}
        <i class="fas fa-chevron-circle-right rightHandle" {{on 'click' this.changeNext}}></i>
    {{/if}}
    <div class='postDetails'>
        <i class="fas fa-times cursor" {{on 'click' this.changeToHome}}
            style="color: #ffffff;position: absolute; font-size: 32px;left: 98%;top: 1%;"></i>
        <div class='postPart postPartWidth'>
                    {{#if (equals (file-type this.post.imageUrl) 'image')}}
                    <img src="{{this.getSrc this.post.imageUrl}}" class="postImageBox">
                    {{else if (equals (file-type this.post.imageUrl) 'video')}}
                    <video autoplay class = 'video' style = 'height: 100%'>
                        <source src="{{this.getSrc this.post.imageUrl}}" type = 'video/mp4'>
                    </video>
                    {{/if}}
        </div>
        <CommentPage @isShowUserBox = {{true}} @userProfileUrl = {{this.getSrc this.user.profileUrl}} @userName = {{this.user.userName}} @caption = {{this.post.caption}} @comments = {{this.comments}} @getProfileId = {{this.getProfileId}} @getCommentUserProfile = {{this.getCommentUserProfile}} @getTime = {{this.getTime}} @removeLike = {{this.removeLike}} @addLike = {{this.addLike}} @getIsLike = {{this.getIsLike}} @post = {{this.post}} @setShowShareList = {{this.setShowShareList}}  @sendComment = {{this.sendComment}} @commentText = {{this.commentText}}/>
