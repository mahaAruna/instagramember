                </p>
            </div>
            <div class='commentContainer'>
                {{#each this.comments as |comment|}}
                <CommentBox @path='instagram.profile' @profileId={{this.getProfileId comment}}
                    @src={{this.getCommentUserProfile comment.user.id 'profile' }} @classForImage={{"postUserImage"}}
                    @userName={{this.getCommentUserProfile comment.user.id 'userName'}}
                    @commentText={{comment.commentText}} @time={{this.getTime comment.commentedDate}}
